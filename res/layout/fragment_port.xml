<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="put.sailhero.android.PortActivity$PlaceholderFragment" >

    <TableRow
        android:id="@+id/basicSectionTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/basicSectionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:text="Basic informations" />
    </TableRow>

    <TableRow
        android:id="@+id/nameTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nameTextViewKey"
            android:layout_weight="1"
            android:text="Name" />

        <TextView
            android:id="@+id/nameTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/cityTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/cityTextViewKey"
            android:layout_weight="1"
            android:text="City" />

        <TextView
            android:id="@+id/cityTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/streetTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/streetTextViewKey"
            android:layout_weight="1"
            android:text="Street" />

        <TextView
            android:id="@+id/streetTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/websiteTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/websiteTextViewKey"
            android:layout_weight="1"
            android:text="Website" />

        <TextView
            android:id="@+id/websiteTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/telephoneTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/telephoneTextViewKey"
            android:layout_weight="1"
            android:text="Telephone" />

        <TextView
            android:id="@+id/telephoneTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/additionalFeaturesSectionTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/additionalFeaturesSectionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:text="Additional features" />
    </TableRow>

    <TableRow
        android:id="@+id/hasPowerConnectionTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <CheckBox
            android:id="@+id/hasPowerConnectionCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Power connection" />

        <TextView
            android:id="@+id/hasPowerConnectionTextViewValue"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:id="@+id/hasFuelStationTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <CheckBox
            android:id="@+id/hasFuelStationCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Fuel station" />

        <TextView
            android:id="@+id/hasFuelStationTextViewValue"
            android:layout_weight="1" />
    </TableRow>

</TableLayout>