<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1" >

    <LinearLayout
        android:id="@+id/main_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <put.sailhero.ui.widget.BezelImageView
            android:id="@+id/profile_image_left"
            android:layout_width="@dimen/message_item_profile_picture_size"
            android:layout_height="@dimen/message_item_profile_picture_size"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/person_image_empty"
            android:visibility="gone"
            app:maskDrawable="@drawable/circle_mask" />

        <LinearLayout
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/slot_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:text="Placeholder message body"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/slot_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder message date"
                android:textColor="@color/body_text_2"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <put.sailhero.ui.widget.BezelImageView
            android:id="@+id/profile_image_right"
            android:layout_width="@dimen/message_item_profile_picture_size"
            android:layout_height="@dimen/message_item_profile_picture_size"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/person_image_empty"
            android:visibility="gone"
            app:maskDrawable="@drawable/circle_mask" />
    </LinearLayout>

</LinearLayout>