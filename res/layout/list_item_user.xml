<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_item_background_normal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_item_main_box_height"
            android:orientation="horizontal" >

            <put.sailhero.ui.widget.BezelImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/user_item_main_box_height"
                android:layout_height="@dimen/user_item_main_box_height"
                android:scaleType="centerCrop"
                android:src="@drawable/person_image_empty"
                app:maskDrawable="@drawable/circle_mask" />

            <LinearLayout
                android:id="@+id/user_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp" >

                <TextView
                    android:id="@+id/slot_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="Placeholder user title"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/slot_user_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placeholder user subtitle"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_item_bottom_box_height"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/accept_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="accept"
                android:visibility="gone" />

            <Button
                android:id="@+id/deny_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="deny"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/right_box"
        android:layout_width="@dimen/user_item_right_box_width"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/invite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="invite"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="cancel"
            android:visibility="gone" />

        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="remove"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>