<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <put.sailhero.ui.widget.BezelImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/user_item_profile_picture_size"
                android:layout_height="@dimen/user_item_profile_picture_size"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person_image_empty"
                app:maskDrawable="@drawable/circle_mask" />

            <LinearLayout
                android:id="@+id/user_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_main_box_height"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/slot_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="Placeholder user title"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/slot_user_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placeholder user subtitle"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/accept_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/list_button_chip"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="accept"
                        android:textColor="@color/body_text_1"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/deny_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/list_button_chip"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="deny"
                        android:textColor="@color/body_text_1"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/right_box"
        android:layout_width="@dimen/user_item_right_box_width"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/invite_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/list_button_chip"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="invite"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cancel_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/list_button_chip"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="cancel"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/remove_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/list_button_chip"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="remove"
            android:textColor="@color/body_text_1"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>